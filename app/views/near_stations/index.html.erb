<p id="notice"><%= notice %></p>

<h1>Near Stations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Line name</th>
      <th>Take minutes</th>
      <th>Real estate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @near_stations.each do |near_station| %>
      <tr>
        <td><%= near_station.name %></td>
        <td><%= near_station.line_name %></td>
        <td><%= near_station.take_minutes %></td>
        <td><%= near_station.real_estate_id %></td>
        <td><%= link_to 'Show', near_station %></td>
        <td><%= link_to 'Edit', edit_near_station_path(near_station) %></td>
        <td><%= link_to 'Destroy', near_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

