<p id="notice"><%= notice %></p>

<h1><%= RealEstate.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= RealEstate.human_attribute_name(:name) %></th>
      <th><%= RealEstate.human_attribute_name(:rent) %></th>
      <th><%= RealEstate.human_attribute_name(:address) %></th>
      <th><%= RealEstate.human_attribute_name(:age) %></th>
      <th><%= RealEstate.human_attribute_name(:notes) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @real_estates.each do |real_estate| %>
      <tr>
        <td><%= real_estate.name %></td>
        <td><%= real_estate.rent.to_s(:currency) %></td>
        <td><%= real_estate.address %></td>
        <td><%= real_estate.age %>年</td>
        <td><%= real_estate.notes %></td>
        <td><%= link_to '詳細', real_estate %></td>
        <td><%= link_to '編集', edit_real_estate_path(real_estate) %></td>
        <td><%= link_to '削除', real_estate, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

