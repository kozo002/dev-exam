<p id="notice"><%= notice %></p>

<h1>Real Estates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Built at</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @real_estates.each do |real_estate| %>
      <tr>
        <td><%= real_estate.name %></td>
        <td><%= real_estate.rent %></td>
        <td><%= real_estate.address %></td>
        <td><%= real_estate.built_at %></td>
        <td><%= real_estate.notes %></td>
        <td><%= link_to 'Show', real_estate %></td>
        <td><%= link_to 'Edit', edit_real_estate_path(real_estate) %></td>
        <td><%= link_to 'Destroy', real_estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

